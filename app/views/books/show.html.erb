 <div class="notice">
     <%= flash[:notice] %>
 </div>
 <div class="container">
    <div class="row">
        <div class="col-xs-3" >
             <%= render 'books/bookers', book: @book ,user: @user%>
        </div>
             <div class="col-xs-9">
            	 	<h1>Book detail</h1>
                     <table class="table">
                           <tr>
                            <td>
                              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %><br>
                              <%= link_to @user.name ,user_path(@user) %> 
                            </td>
                            <td>
                              <%= link_to @book.title ,book_path(@book.id) %>
                            </td>
                            <td>
                              <%= @book.body %>
                            </td>
                            <% if @book.user_id == @users.id %>
                            <td>
                              <%= link_to "Edit",edit_book_path(@book) %>
                            </td>
                            <td>
                              <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: '削除しますか？' }  %>
                            </td>
                            <% end %>
                          </tr>
                        </table>
              </div>
      </div>
  </div>