<div class="container">
    <div class="row">
        <div class="col-xs-3" >
            <%= render 'books/bookers', book: @book ,user: @user%>
        </div>
              <div class="col-xs-9">
                  <section class="book">
                      <h1>Books</h1>
                          <table class="table">
                            <tr>
                              <th></th>
                              <th>Title</th>
                              <th>Opinio</th>
                            </tr>
                            <% @books.each do |book| %>
                             <tr>
                              <td>
                                <%= link_to user_path(book.user.id) do %>
                                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40'%>
                                <% end %>
                              </td>
                              <td>
                              <%= link_to book.title ,book_path(book.id) %>
                              </td>
                              <td>
                                <%= book.body %>
                              </td>
                            </tr>
                            <% end %>
                          </table>
                    </section>
              </div>
    </div>
</div>