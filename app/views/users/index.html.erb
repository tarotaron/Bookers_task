<div class="container">
    <div class="row">
        <div class="col-xs-3" >
            <%= render 'books/bookers', book: @book ,user: @user%>
        </div>
             <div class="col-xs-9">
                <section class="book">
                  <h1>Users</h1>
                   <table class="table">
                        <tr>
                          <th>image</th>
                          <th>name</th>
                          <th></th>
                        </tr>
                        <% @users.each do |user| %>
                         <tr>
                          <td>
                            <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg",size:'40x40' %>
                          </td>
                          <td>
                            <%= user.name %>
                          </td>
                           <td>
                            <%= link_to "Show",user_path(user) %> 
                          </td>
                        </tr>
                        <% end %>
                      </table>
                </section>
              </div>
      </div>
</div>
